{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noImplicitAny": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "./src",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "**/node_modules"
    ]

}